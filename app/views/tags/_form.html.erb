<%= errors(@tag) %>

<%= form_for @tag, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'e.g. Glassware' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label"></div>
    <div class="col-sm-10">
      <%= f.submit class: 'btn btn-primary', value: 'Update Category' %>
      <%= link_to t('.cancel', default: t('helpers.links.cancel')), tags_path, class: 'btn' %>
    </div>
  </div>
<% end %>
