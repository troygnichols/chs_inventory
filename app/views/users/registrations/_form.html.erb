<%= form_for :user, url: user_registration_path, method: 'POST', :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, 'Password', :class => 'control-label' %>
    <div class="controls">
        <%= f.password_field :password, :class => 'password' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, 'Confirm password', :class => 'control-label' %>
    <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'password' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Register', :class => 'btn btn-primary' %>
  </div>
<% end %>
