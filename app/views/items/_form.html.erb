<%= form_for @item, html: { role: :form, class: 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control',
        autofocus: true, placeholder: 'e.g. Volumetric Flask', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :size, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :size, class: 'form-control', placeholder: 'e.g. 500' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :units, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :units, class: 'form-control', placeholder: 'e.g. mL' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Category", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field 'tag', 'name', value: @item.tag.try(:name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label"></div>
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), items_path, class: 'btn' %>
    </div>
  </div>
<% end %>
